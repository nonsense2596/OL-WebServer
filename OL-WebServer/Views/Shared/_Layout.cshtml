<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WebApiTeszt2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="wrapper">
        @if (ViewBag.ShowTopBar ?? false)
        {
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="nav-link" href="@ViewBag.Left.Link">@ViewBag.Left.Name</a>
                <a class="navbar-brand mx-auto" href="@ViewBag.Mid.Link">@ViewBag.Mid.Name (current) </a>
                <a class="nav-link" href="@ViewBag.Right.Link">@ViewBag.Right.Name</a>
            </nav>
        }
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>